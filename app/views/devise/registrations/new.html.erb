<body class="login-page">
<%= render "layouts/header" %>
 <div class="page-header">
   <div class="page-header-image" style="background-image:url(/assets/img2.jpg)"></div>
      <div class="container">
          <div class="col-md-4 content-center">
            <div class="card card-login card-plain">
             
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                
                  <div class="content">
                      <div class="input-group form-group-no-border input-lg">
                          <span class="input-group-addon">
                              <i class="now-ui-icons users_circle-08"></i>
                          </span>
                                    
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                      </div>
                      <div class="input-group form-group-no-border input-lg">
                        <span class="input-group-addon">
                          <i class="now-ui-icons ui-1_lock-circle-open"></i>
                        </span>
                     
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (6 characters minimum)" %>
                      </div>
                      <div class="input-group form-group-no-border input-lg">
                          <span class="input-group-addon">
                              <i class="now-ui-icons ui-1_lock-circle-open"></i>
                          </span>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                      </div>
                  </div>
                  <div class="footer text-center">
                      <%= f.submit "Sign up", class:"btn btn-primary btn-round btn-lg btn-block" %>
                  </div>
                  <div class="pull-left">
                    <h6>
                    <%= render "devise/shared/links" %>
                    </h6>
                  </div>
              <% end %>
     </div>
  </div>
</div>
<%= render ("layouts/footer2") %>
</body>

