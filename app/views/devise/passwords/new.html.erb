<body class="login-page">
<%= render "layouts/header" %>
 <div class="page-header">
   <div class="page-header-image" style="background-image:url(/assets/img2.jpg)"></div>
      <div class="container">
          <div class="col-md-4 content-center">
            <div class="card card-login card-plain">
              <h4>Forgot your password?</h4>
             
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                </br>
                  <div class="content">
                      <div class="input-group form-group-no-border input-lg">
                          <span class="input-group-addon">
                              <i class="now-ui-icons users_circle-08"></i>
                          </span>
                                    
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                      </div>
                  </div>
                  <div class="footer text-center">
                      <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-round btn-lg btn-block text-center" %>
                  </div>
              <% end %>    
              <div class="pull-right">
                <h6>
                  <%= render "devise/shared/links" %>
                </h6>
              </div>      
          </div>
      </div>
</div>

<%= render ("layouts/footer2") %>
</body>
